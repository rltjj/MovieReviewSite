<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.big.mapper.ProReMapper">
    
    <select id="getAllMovies" resultType="org.big.dto.MovieDto">
        <![CDATA[
           SELECT id, title, director, release_date, genre, poster_image_name, synopsis, average_rating, created_at
        FROM movies
        ]]>
    </select>
    
    <select id="findById" resultType="org.big.dto.MovieDto">
        <![CDATA[
           SELECT * FROM movies WHERE id = #{id}
        ]]>
    </select>
    
</mapper>
